---
const posts = await Astro.glob('./docs/*.md');
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="data:image/svg+xml,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20100%20100%22%3E%3Ctext%20y%3D%22.9em%22%20font-size%3D%2290%22%3E%F0%9F%92%AA%3C%2Ftext%3E%3C%2Fsvg%3E" type="image/svg+xml">
    <link rel="shortcut icon" href="data:image/svg+xml,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20100%20100%22%3E%3Ctext%20y%3D%22.9em%22%20font-size%3D%2290%22%3E%F0%9F%92%AA%3C%2Ftext%3E%3C%2Fsvg%3E" type="image/svg+xml">
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>BenchPress</title>
  </head>
  <body>
    <h1>BenchPress</h1>
    {posts.map((post) => (
      <a href={post.url}><h1>{post.frontmatter.Title}</h1></a>
    ))}
  </body>
</html>
